generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Flight {
  id                 String   @id @default(uuid())
  date               DateTime
  departureAirport   Airport  @relation("DepartureAirport", fields: [airportId], references: [id])
  departureLocalTime DateTime
  departureGMTTime   DateTime
  arrivalAirport     Airport  @relation("ArrivalAirport", fields: [arrivalAirportId], references: [id])
  arrivalLocalTime   DateTime
  arrivalGMTTime     DateTime
  airline            String
  flightNumber       String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  airportId          String
  arrivalAirportId   String
}

model Airport {
  id               String   @id @default(uuid())
  name             String
  code             String
  city             String
  country          String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  departingFlights Flight[] @relation("DepartureAirport")
  arrivingFlights  Flight[] @relation("ArrivalAirport")
}
